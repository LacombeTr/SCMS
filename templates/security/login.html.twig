{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('styles/registration.css') }}" rel="stylesheet">
{% endblock %}

{% block title %}Identification{% endblock %}

{% block body %}
    <div class="content-container">
        <div class="title-container">
            <h3 class="surlignage-jaune">Se connecter</h3>
        </div>
        <form method="post" class="form-container">

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se
                        déconnecter</a>
                </div>
            {% endif %}

            <label for="inputEmail">E-mail</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                   autocomplete="email" required autofocus>
            <label for="inputPassword">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword"
                   autocomplete="current-password"
                   required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
                   value="{{ csrf_token('authenticate') }}">

            <div class="remember-me">
                <input type="checkbox" name="_remember_me">
                <label> Se souvenir de moi</label>
            </div>

            <button class="submit-button" type="submit">
                Se connecter
            </button>
        </form>
        {% if error %}
            <div class="title-container">
                <p class="surlignage-magenta wrong-credentials">L'e-mail ou le mot de passe <br> entré n'est pas correct</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
