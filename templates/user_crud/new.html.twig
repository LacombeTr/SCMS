{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('styles/registration.css') }}" rel="stylesheet">
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="content-container">
        <div class="title-container">
            <h3 class="surlignage-cyan">S'inscrire</h3>
        </div>

        {{ form_start(form, {'attr': {'id': 'new_edit_utilisateur','class': 'form-container'}}) }}
        
        {# TODO: Ajouter les champs restant de l'inscription qui iront dans une autre table #}
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {{ form_label(form.password) }}
        {{ form_widget(form.password) }}
        <label for="verifpass">Entrez de nouveau le mot de passe:</label>
        <input type="password" id="verifpass" required>
        <button class="submit-button">{{ button_label|default('Valider') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
