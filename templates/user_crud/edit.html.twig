{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('styles/registration.css') }}" rel="stylesheet">
{% endblock %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <div class="content-container">
        <div class="title-container">
            <h3 class="surlignage-cyan">Modifier l'utilisateur</h3>
        </div>

        {{ form_start(form, {'attr': {'id': 'new_edit_utilisateur','class': 'form-container'}}) }}
        {{ form_label(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'input'}}) }}
        {{ form_errors(form.email) }}

        {{ form_label(form.plainPassword) }}
        {{ form_widget(form.plainPassword, {'attr': {'class': 'input'}}) }}
        {{ form_errors(form.plainPassword) }}

        {{ form_label(form.roles) }}
        {{ form_widget(form.roles) }}
        {{ form_errors(form.roles) }}

        <button class="submit-button">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}

        <a href="{{ path('app_user_crud_index') }}" class="submit-button return">Revenir Ã  la liste</a>
    </div>
{% endblock %}
